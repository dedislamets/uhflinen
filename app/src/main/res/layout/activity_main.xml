<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/profile"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Hallo, "/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nama_user"
            android:textStyle="bold"
            android:textFontWeight="500"
            android:textSize="18dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:text="Nama User"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="13dp"
            android:paddingRight="10dp"
            android:id="@+id/department"
            android:text="Department"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layoutPlanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        android:background="@drawable/frame427319178">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgUhf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/rnsb_p" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgUhf"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom|right"
                android:paddingRight="30dp"
                android:scaleX="-1"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/banner_main"/>


        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutSinyal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible"
        android:paddingBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutPlanner"
        >

        <LinearLayout
            android:id="@+id/LayoutStatusConnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            >
                <ImageView
                    android:id="@+id/imageConnected"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_cast_connected"
                    android:tint="@color/colorAccent"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connected Server"
                            android:textColor="@color/hijau"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/some_id"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:background="#039855"
                            android:text="1"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:padding="5dp"
                            android:textAlignment="center"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textBaseUrl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="localhost"
                        android:textColor="@color/blu"
                        android:visibility="gone"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LayoutStatusDisconnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/imageDisconnected"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_sync_disabled"
                android:tint="@color/colorAccent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textStatusDisconnected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disconnected Server"
                    android:textColor="@color/colorRed"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/textBaseUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="http://www.demo.sachiagroup.com/api/"
                    android:textColor="@color/blu"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menulayout"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutSinyal"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/lay1"
                android:layout_height="0dp"
                android:visibility="visible"
                android:layout_weight=".50">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:id="@+id/LayoutGoal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/white_rectangle_background"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtKotor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Linen Kotor"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp"
                                android:paddingTop="10dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:id="@+id/pkotor"
                                android:text="Kumpulan dari linen kotor"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp"
                                android:layout_below="@id/txtKotor"
                                android:paddingBottom="10dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingLeft="15dp"
                                android:paddingBottom="10dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="30dp"
                                        android:id="@+id/gotoKotor"
                                        android:layout_gravity="bottom|left"
                                        android:layout_marginRight="20dp"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/arrow_right_circle"
                                        />
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/img_kotor"
                                    android:layout_weight="1"
                                    android:layout_gravity="right|bottom"
                                    android:contentDescription="@string/app_name"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/svg_kotor"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/LayoutFinance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/white_rectangle_background"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtBersih"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Linen Bersih"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp"
                                android:paddingTop="10dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:id="@+id/pBersih"
                                android:text="Kumpulan dari linen bersih"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp"
                                android:layout_below="@id/txtBersih"
                                android:paddingBottom="10dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingLeft="15dp"
                                android:paddingBottom="10dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="30dp"
                                        android:id="@+id/gotoBersih"
                                        android:layout_gravity="bottom|left"
                                        android:layout_marginRight="20dp"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/arrow_right_circle"
                                        />
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/img_bersih"
                                    android:layout_weight="1"
                                    android:layout_gravity="right|bottom"
                                    android:contentDescription="@string/app_name"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/svg_bersih"
                                    />
                            </LinearLayout>



                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/lay2"
                android:visibility="visible"
                android:layout_weight=".50">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:id="@+id/LayoutPromise"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/white_rectangle_background"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtKeluar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Linen Keluar"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp"
                                android:paddingTop="10dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:id="@+id/pKeluar"
                                android:text="Kumpulan dari linen keluar"
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp"
                                android:layout_below="@id/txtKeluar"
                                android:paddingBottom="10dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingLeft="15dp"
                                android:paddingBottom="10dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="30dp"
                                        android:id="@+id/gotoKeluar"
                                        android:layout_gravity="bottom|left"
                                        android:layout_marginRight="20dp"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/arrow_right_circle"
                                        />
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/img_keluar"
                                    android:layout_weight="1"
                                    android:layout_gravity="right|bottom"
                                    android:contentDescription="@string/app_name"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/svg_keluar"
                                    />
                            </LinearLayout>



                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/LayoutSetting"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/white_rectangle_background"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtRusak"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Linen Rusak"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp"
                                android:paddingTop="10dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:id="@+id/pRusak"
                                android:text="Kumpulan dari linen rusak"
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp"
                                android:layout_below="@id/txtRusak"
                                android:paddingBottom="10dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingLeft="15dp"
                                android:paddingBottom="10dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="30dp"
                                        android:id="@+id/gotoRusak"
                                        android:layout_gravity="bottom|left"
                                        android:layout_marginRight="20dp"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/arrow_right_circle"
                                        />
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/img_rusak"
                                    android:layout_weight="1"
                                    android:layout_gravity="right|bottom"
                                    android:contentDescription="@string/app_name"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/svg_rusak"
                                    />
                            </LinearLayout>



                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/lay3"
                android:visibility="gone"
                android:layout_weight=".50">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:id="@+id/LayoutPenilaian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".30"
                        android:layout_margin="5dp"
                        android:background="@drawable/white_rectangle_background"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/menuPenilaian"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/img_penilaian"
                                android:padding="10dp"
                                android:layout_weight="0.7"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/checklist" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Penilaian"
                                android:textColor="@color/colorAccent"
                                android:textSize="20sp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_below="@id/img_penilaian"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:layout_margin="5dp"
                        android:id="@+id/LayoutPengawasan"
                        android:background="@drawable/white_rectangle_background"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/menuInspeksi"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_weight="0.7"
                                android:id="@+id/img_pengawasan"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/fillup" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Inspeksi"
                                android:textColor="@color/colorAccent"
                                android:textSize="20sp"
                                android:layout_below="@id/img_pengawasan"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:layout_margin="5dp"
                        android:id="@+id/LayoutSoal"
                        android:background="@drawable/white_rectangle_background"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/menuSoal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_weight="0.7"
                                android:id="@+id/img_soal"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/online" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Task"
                                android:textColor="@color/colorAccent"
                                android:textSize="20sp"
                                android:layout_below="@id/img_pengawasan"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/colorWhite"
        android:foregroundTint="@color/allbg"
        app:backgroundTint="@color/colorWhite"
        app:itemBackground="@color/colorWhite"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout >